<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <servlet>
  	<servlet-name>SimpleSimulator</servlet-name>
  	<servlet-class>com.server.SimpleSimulatorImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>SimpleSimulator</servlet-name>
  	<url-pattern>/4x/simple_sim</url-pattern>
  </servlet-mapping>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>game.html</welcome-file>
  </welcome-file-list>
</web-app>
